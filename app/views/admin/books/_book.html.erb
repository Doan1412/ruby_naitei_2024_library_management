<%= table_body do %>
  <%= table_row do %>
    <%= table_column do %>
      <%= book.id %>
    <% end %>
    <%= table_column do %>
      <div class="w-96 overflow-hidden whitespace-nowrap text-ellipsis">
        <%= book.title %>
      </div>
    <% end %>
    <%= table_column do %>
      <%= book.quantity %>
    <% end %>
    <%= table_column do %>
      <div class="flex gap-2">
        <%= link_to t("edit"), edit_admin_book_path(book), class: "mr-2 p-3 py-1 mt-2 bg-transparent hover:bg-primary text-primary font-semibold hover:text-white border border-primary hover:border-transparent rounded-md font-medium" %>
        <%= button_to t("delete"), admin_book_path(book), method: :delete, class: "mr-2 p-3 py-1 mt-2 bg-transparent hover:bg-red-700 text-red-700 font-semibold hover:text-white border border-red-700 hover:border-transparent rounded-md font-medium" %>
      </div>
    <% end %>
  <% end %>
<% end %>
